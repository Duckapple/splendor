{
  "scripts": {
    "build:function": "(cd function-src && bun ./build.ts)",
    "deploy:function": "gcloud functions deploy splendor-test --region=europe-west3 --trigger-http --runtime=nodejs20 --source=function --allow-unauthenticated --gen2 --env-vars-file .env.yaml",
    "db:generate": "bun drizzle-kit generate:mysql --schema=./db/schema.ts",
    "db:migrate-prod": "bun ./db/runMigrations.ts",
    "frontend": "cd frontend && bun run",
    "preview": "bun run frontend build && bun run frontend preview"
  },
  "devDependencies": {
    "@google-cloud/datastore": "^8.2.2",
    "@google-cloud/functions-framework": "^3.3.0",
    "@types/bcrypt": "^5.0.2",
    "@types/web-push": "^3.6.2",
    "bun-types": "latest",
    "drizzle-kit": "^0.19.13",
    "web-push": "^3.6.6"
  },
  "name": "splendor",
  "module": "index.js",
  "type": "module",
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@planetscale/database": "^1.11.0",
    "bcrypt": "^5.1.1",
    "drizzle-orm": "^0.28.6",
    "neverthrow": "^6.1.0",
    "valibot": "^0.20.1"
  }
}
